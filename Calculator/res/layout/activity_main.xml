       android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_weight="1"
        android:layout_margin="3dp"
       android:id = "@+id/fivebtn" 
       android:background="#161314"
       android:textColor="#FFFFFF"
       android:textSize="20dp"
       android:text="5" /> 
            
